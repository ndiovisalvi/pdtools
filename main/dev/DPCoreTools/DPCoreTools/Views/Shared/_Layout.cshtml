<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="x-ua-compatible" content="ie=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
	<meta name="description" content="">
	<meta name="author" content="">
	<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
	<title>@ViewData["Title"] - DataPower Gateway Tools</title>

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/css/common.css" />

	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
	<script src="~/lib/Mustache/mustache.js"></script>
</head>
<body>
	<nav class="navbar navbar-expand-sm navbar-light bg-dark">
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<a href="#menu-toggle" id="menu-toggle" class="btn btn-primary"><i class="fas fa-bars"></i></a>
		<div class="collapse navbar-collapse" id="nav-content">
		</div>
		<div class="collapse navbar-collapse justify-content-end" id="nav-content2">
		</div>
		<div class="collapse navbar-collapse justify-content-end" id="nav-content2">
			<div class="navbar-right">
				<ul class="navbar-nav navbar-right">
					<li class="nav-item">
						<a href="#" title="Manage" class="btn btn-link navbar-btn navbar-link"> @User.Identity.Name</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
	@await Html.PartialAsync("_Menu")
	<div class="container body-content">
		@RenderBody()
		<hr />
		@*<footer>
				<img src="~/images/CoreMiilitia.png" class="gc-footer"/>
				<p>&copy; 2018</p>
			</footer>*@
	</div>
	<script defer src="~/lib/Font-Awesome/svg-with-js/js/fa-solid.js"></script>
	<script defer src="~/lib/Font-Awesome/svg-with-js/js/fontawesome.js"></script>
	<script src="~/js/properties.js"></script>
	<script src="~/js/plugin.js"></script>
	<script src="~/js/common.js"></script>
	@RenderSection("Scripts", required: false)
	<script>
		$("#menu-toggle").click(function (e) {
			e.preventDefault();
			$("#wrapper").toggleClass("toggled");
		});
	</script>
</body>
</html>
