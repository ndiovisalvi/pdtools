@model List<DPCoreTools.SeedWork.Models.Domain>

<style>
	ul {
		margin: 0;
		padding: 0;
		list-style: none;
	}
	.no-data {
		color: rgba(128,128,128,1);
		font-size: .9em;
	}
</style>
<div style="width: 100%; position: relative;">
	@if (Model.Any())
	{
		<div style="position: relative; height: 2.5em; font-size: .9em;">
			<span style="position: absolute; right: 1em; top: 5px;">
				<small>Total : <strong>@Model.Count</strong></small>
			</span>
		</div>
		<table class="DPCore-table">
			<thead>
				<tr>
					<th>
						Dominio
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td class="td-action">
							@*<a asp-action="Read" asp-controller="controller" asp-route-id="@item.Id"><i class="fas fa-search"></i></a>
							<a asp-action="Edit" asp-controller="controller" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
							<a asp-action="Remove" asp-controller="controller" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>*@
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p class="no-data" style="margin: 0; padding: 1em;">No existen dominios a mostrar</p>
	}
</div>